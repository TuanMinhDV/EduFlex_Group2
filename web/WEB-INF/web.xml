    </servlet>
    <servlet>
        <servlet-name>QuizManageController</servlet-name>
        <servlet-class>controller.common.QuizManageController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CourseManageController</servlet-name>
        <url-pattern>/courseManage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailCourseInsController</servlet-name>
        <url-pattern>/detailCourseIns</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChapterManageController</servlet-name>
        <url-pattern>/chapterManage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LessonManageController</servlet-name>
        <url-pattern>/lessonManage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuizManageController</servlet-name>
        <url-pattern>/quizManage</url-pattern>
